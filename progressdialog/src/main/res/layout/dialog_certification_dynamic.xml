<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_dialog_top"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:padding="15dp"
            android:src="@drawable/progress_black"/>

        <TextView
            android:id="@+id/not_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/warn_icon"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/none_certification_vip"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/certification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:drawableLeft="@drawable/dynamic_new"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/dynamic_action"/>


    </LinearLayout>

    <TextView
        android:id="@+id/confirm_vip"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_top"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_dialog_bottom"
        android:gravity="center"
        android:text="@string/upgrad_vip"
        android:textColor="@android:color/white"/>

</RelativeLayout>
