<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color"
    android:orientation="vertical">

    <include layout="@layout/em_app_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x15"
        android:paddingLeft="@dimen/x50"
        android:paddingRight="@dimen/x50"
        android:paddingTop="@dimen/x15">

        <TextView
            android:id="@+id/tv_tixian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/my_account_tixian_selector"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_chongzhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/my_account_selector"
            android:gravity="center" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/x20"
        android:paddingLeft="@dimen/x60"
        android:paddingRight="@dimen/x60"
        android:paddingTop="@dimen/x20">

        <TextView
            android:id="@+id/tv_enable_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/text_gray_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_certification_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_enable_money"
            android:layout_marginTop="@dimen/x15"
            android:text="@string/loading"
            android:textColor="@color/text_gray_color"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_earnings_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_certification_money"
            android:layout_marginTop="@dimen/x15"
            android:text="@string/loading"
            android:textColor="@color/text_gray_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/get_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x100"
            android:text="提现"
            android:textColor="@color/text_select_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/get_certification_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_certification_money"
            android:layout_below="@+id/get_money"
            android:text="@string/get_certification_money"
            android:textColor="@color/text_time_gray_color"
            android:textSize="16sp"
            android:visibility="gone"

            />

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x30" />


</LinearLayout>
