<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:orientation="horizontal"
        android:background="@color/black">
        <ImageView
            android:padding="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_back"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x40"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y70"
            android:id="@+id/my_follow"
            android:textSize="17sp"
            android:textColor="#FFD305"
            android:background="@mipmap/make_left"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x105"
            android:gravity="center"
            android:text="我关注的"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y70"
            android:id="@+id/follow_my"
            android:background="@mipmap/make_black_right"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/my_follow"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="#D6DDE4"
            android:text="关注我的"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_pingbi"
            android:background="@mipmap/nosee"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginLeft="@dimen/x70"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragmentlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>
