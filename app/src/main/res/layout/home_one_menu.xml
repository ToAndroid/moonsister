<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout

        android:id="@+id/layou_navigation_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="@color/black"
        android:gravity="center_vertical">

        <!--<ImageView-->
        <!--android:id="@+id/view_line"-->
        <!--style="@style/app_line_horizontal"-->
        <!--android:layout_above="@+id/layou_navigation"-->
        <!--android:layout_alignParentBottom="true" />-->

        <!--<ImageView-->
        <!--android:id="@+id/view_center_line"-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_centerInParent="true" />-->

        <TextView
            android:id="@+id/tv_navigation_good_select"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y70"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x160"
            android:background="@mipmap/make_left"
            android:gravity="center"
            android:text="@string/home_one_menu_good_select"
            android:textColor="#FFD305"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_navigation_same_city"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y70"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/tv_navigation_good_select"
            android:background="@mipmap/make_black_right"
            android:gravity="center"
            android:text="@string/home_one_menu_same_city"
            android:textColor="#D6DDE4"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/x20"
            android:src="@mipmap/home_search"
            android:textColor="@color/text_black_color"
            android:visibility="gone"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layou_navigation_title"></FrameLayout>

    <FrameLayout
        android:id="@+id/layout_home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fl_banner"></FrameLayout>

</RelativeLayout>