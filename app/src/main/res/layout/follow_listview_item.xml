<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <com.moonsister.tcjy.widget.RoundedImageView
        android:id="@+id/riv_friend_image"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/x120"
        android:layout_margin="@dimen/x30"
        android:src="@mipmap/load_small"/>

    <ImageView
        android:id="@+id/iv_add_v"
        android:layout_width="@dimen/x32"
        android:layout_height="@dimen/x32"
        android:layout_alignBottom="@+id/riv_friend_image"
        android:layout_marginLeft="-25dp"
        android:layout_toRightOf="@+id/riv_friend_image"
        android:src="@mipmap/add_v_icon"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/riv_friend_image"
        android:layout_marginTop="@dimen/x10"
        android:layout_toRightOf="@+id/riv_friend_image"
        android:text="@string/loading"
        android:textColor="@color/text_black_color"/>

    <TextView
        android:id="@+id/textview_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x22"
        android:layout_marginTop="@dimen/x38"
        android:layout_toRightOf="@+id/tv_user_name"
        android:background="@drawable/backgroup_red"
        android:paddingBottom="@dimen/x5"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/x5"/>

    <ImageView
        android:id="@+id/iv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:layout_toRightOf="@+id/riv_friend_image"
        android:src="@mipmap/gril"/>

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x15"
        android:layout_toRightOf="@+id/iv_sex"
        android:singleLine="true"
        android:text="@string/loading"
        android:textColor="@color/text_gray_778998"
        android:textSize="13sp"/>


    <TextView
        android:id="@+id/tv_wacth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x10"
        android:drawableTop="@mipmap/delete_follow"
        android:text="取消关注"
        android:textColor="@color/text_gray_778998"/>

    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x15"
        android:layout_toLeftOf="@+id/tv_wacth"
        android:layout_toRightOf="@+id/tv_age"
        android:enabled="true"
        android:singleLine="true"
        android:text="@string/loading"
        android:textColor="@color/text_gray_778998"
        android:textSize="13sp"/>
</RelativeLayout>
