<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

    <TextView
        android:id="@+id/tv_comment_number"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x92"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x30"
        android:gravity="center_vertical"
        android:text="@string/comment"
        android:textColor="@color/black_1d262e"
        android:textSize="@dimen/text_size_16"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tv_home_page_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/show_vip_icon"
            android:drawablePadding="@dimen/x4"
            android:gravity="center"
            android:paddingLeft="@dimen/x10"
            android:text="0"
            android:textColor="@color/text_gray_778998"
            android:textSize="@dimen/text_size_12"/>

        <View
            style="@style/vertical_line"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"/>

        <TextView
            android:id="@+id/tv_wacth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/text_gray_778998"
            android:textSize="@dimen/text_size_13"/>

        <View
            style="@style/vertical_line"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"/>

        <TextView
            android:id="@+id/tv_not_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/text_gray_778998"
            android:textSize="@dimen/text_size_13"/>

        <View
            style="@style/vertical_line"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"/>

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/text_gray_778998"
            android:textSize="@dimen/text_size_13"/>
    </LinearLayout>

</RelativeLayout>