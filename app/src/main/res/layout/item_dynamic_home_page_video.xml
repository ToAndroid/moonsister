<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.moonsister.tcjy.widget.RoundedImageView
            android:id="@+id/riv_user_image"
            android:layout_width="@dimen/x92"
            android:layout_height="@dimen/x92"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/x15"/>

        <ImageView
            android:id="@+id/iv_add_v"
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/x32"
            android:layout_alignBottom="@+id/riv_user_image"
            android:layout_marginLeft="-20dp"
            android:layout_toRightOf="@+id/riv_user_image"
            android:src="@mipmap/add_v_icon"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/riv_user_image"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/riv_user_image"
            android:text="@string/loading"
            android:textColor="@color/black_1d262e"
            android:textSize="@dimen/text_size_16"/>

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_user_name"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@+id/tv_user_name"
            android:src="@mipmap/vipmost"/>

        <TextView
            android:id="@+id/tv_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_user_name"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/iv_vip"
            android:background="@drawable/backgroup_red"
            android:paddingBottom="@dimen/x2"
            android:paddingLeft="@dimen/x8"
            android:paddingRight="@dimen/x8"
            android:paddingTop="@dimen/x2"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"/>


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/riv_user_image"
            android:layout_marginRight="@dimen/x30"
            android:text="@string/loading"
            android:textColor="@color/text_gray_778998"
            android:textSize="@dimen/text_size_12"/>

        <ImageView
            android:id="@+id/iv_sex_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_user_name"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginTop="@dimen/x20"
            android:layout_toRightOf="@+id/riv_user_image"
            android:src="@mipmap/gril"/>

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x13"
            android:layout_toRightOf="@+id/iv_sex_icon"
            android:gravity="center"
            android:text="@string/loading"
            android:textColor="@color/text_gray_778998"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/tv_user_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_sex"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@+id/tv_sex"
            android:text="@string/loading"
            android:textColor="@color/text_gray_778998"
            android:textSize="@dimen/text_size_12"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/dynamic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:enabled="true"
        android:gravity="bottom"
        android:maxLines="2"
        android:paddingLeft="@dimen/x10"
        android:text="@string/loading"
        android:textColor="@color/black_1d262e"
        android:textSize="@dimen/text_size_16"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="@dimen/x660"
            android:layout_height="@dimen/x328"
            android:layout_gravity="center"

            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_page_video_play"/>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x92"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_user_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/home_page_like"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="@string/loading"
                android:textColor="@color/text_gray_778998"
                android:textSize="@dimen/text_size_12"/>
        </FrameLayout>

        <View
            style="@style/vertical_line"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginTop="@dimen/x15"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_home_page_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/home_page_comment"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="@string/loading"
                android:textColor="@color/text_gray_778998"
                android:textSize="@dimen/text_size_12"/>
        </FrameLayout>

        <View
            style="@style/vertical_line"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginTop="@dimen/x15"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_home_page_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/home_page_pay"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="@string/loading"
                android:textColor="@color/text_gray_778998"
                android:textSize="@dimen/text_size_12"/>
        </FrameLayout>

        <View
            android:id="@+id/tv_home_page_vip_line"
            style="@style/vertical_line"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginTop="@dimen/x15"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_home_page_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/show_vip_icon"
                android:drawablePadding="@dimen/x4"
                android:gravity="center"
                android:paddingLeft="@dimen/x10"
                android:text="10000"
                android:textColor="@color/text_gray_778998"
                android:textSize="@dimen/text_size_12"/>
        </FrameLayout>

        <View
            android:id="@+id/home_page_pay_line"
            style="@style/vertical_line"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginTop="@dimen/x15"/>

        <FrameLayout
            android:id="@+id/fl_home_page_control"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_home_page_control"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/home_page_control"
                android:gravity="center"
                android:padding="@dimen/x40"
                android:textColor="@color/text_gray_778998"
                android:textSize="@dimen/text_size_12"/>
        </FrameLayout>


    </LinearLayout>


</LinearLayout>