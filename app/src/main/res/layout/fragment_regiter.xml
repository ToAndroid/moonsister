<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:background="#f790ae"
        android:gravity="center"
        android:layout_height="@dimen/x96"
        android:layout_width="match_parent"
        android:text="找回密码"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y66"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:drawableLeft="@mipmap/reg_1"
            android:drawablePadding="@dimen/x10"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/regiter_text"
            android:textColor="@color/grid_line"
            android:textSize="16sp" />
    </LinearLayout>

    <EditText
        android:background="@drawable/shape_edit"
        android:hint="请输入手机号"
        android:id="@+id/et_phone_number"
        android:layout_height="@dimen/y96"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y106"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/x15"
        android:textColor="@color/black"
        android:textColorHint="@color/white_d6dde4"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <EditText
            style="@style/edittext_login"
            android:background="@drawable/shape_edit"
            android:ems="6"
            android:gravity="center_vertical"
            android:hint="输入验证码"
            android:id="@+id/et_security_code"
            android:inputType="number"
            android:layout_height="@dimen/y92"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            android:layout_width="@dimen/x500"
            android:textColor="@color/black"
            android:textColorHint="@color/white_d6dde4" />

        <TextView
            style="@style/textview_login"
            android:background="@drawable/shape_edit"
            android:gravity="center"
            android:id="@+id/tv_security_code"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/y92"
            android:layout_marginTop="@dimen/y20"
            android:layout_width="@dimen/x270"
            android:text="@string/get_security_code"
            android:textColor="@color/text_gray_778998"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:background="@mipmap/register_backgroud"
        android:gravity="center"
        android:id="@+id/tv_submit"
        android:layout_below="@+id/layout_input"
        android:layout_height="@dimen/y92"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x130"
        android:layout_width="match_parent"
        android:text="@string/next_bu"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>