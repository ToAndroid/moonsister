<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#636363"
    android:orientation="vertical">

    <com.moonsister.tcjy.my.view.RoundImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/y300"
        android:background="@drawable/custom_imageview"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y178"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/layout_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y122"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/y30"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tv_username"
            android:layout_width="@dimen/x50"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/login_page_people"
            android:paddingBottom="@dimen/y30"
            android:layout_marginLeft="@dimen/x100" />

        <EditText
            android:id="@+id/et_phone_number"
            style="@style/edittext_login"
            android:layout_centerVertical="true"
            android:textColorHint="@color/white_d6dde4"
            android:layout_toRightOf="@+id/tv_username"
            android:textSize="18sp"
            android:paddingLeft="@dimen/x50"
            android:numeric="integer"
            android:hint="@string/input_phone_number" />

    </LinearLayout>
    <TextView
        android:layout_width="@dimen/x700"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/text_gray_778998"/>
    <LinearLayout
        android:id="@+id/layout_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginBottom="@dimen/y30"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tv_pwd"
            android:layout_width="@dimen/x50"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_page_password"
            android:paddingBottom="@dimen/y30"
            android:layout_marginLeft="@dimen/x100" />

        <EditText
            android:id="@+id/et_password"
            style="@style/edittext_login"
            android:textColorHint="@color/white_d6dde4"
            android:layout_toRightOf="@+id/tv_username"
            android:textSize="18sp"
            android:paddingLeft="@dimen/x50"
            android:password="true"
            android:hint="请输入密码" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_page_yellow"
            android:background="@mipmap/login_page_yellow"
            android:layout_marginLeft="@dimen/x250"/>

    </LinearLayout>
    <TextView
        android:layout_width="@dimen/x700"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/text_gray_778998"/>
    <TextView
        android:id="@+id/submit_login"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y92"
        android:layout_marginTop="@dimen/y60"
        android:background="@mipmap/login_backgroud"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/str_login"
        android:textSize="19sp"
        android:textColor="@color/white_d6dde4" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_new_people"
            android:text="注册新用户"
            android:layout_marginTop="@dimen/y30"
            android:textColor="@color/white_d6dde4"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:textColor="@color/white_d6dde4"
            android:layout_marginLeft="@dimen/x250"
            android:text="@string/forget_password" />
    </LinearLayout>



</LinearLayout>