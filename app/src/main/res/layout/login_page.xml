<LinearLayout android:background="#f790ae"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.moonsister.tcjy.my.view.RoundImageView
        android:background="@drawable/custom_imageview"
        android:id="@+id/iv_user_icon"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_height="@dimen/y300"
        android:layout_marginTop="@dimen/y178"
        android:layout_width="@dimen/x300"
        android:scaleType="centerInside" />

    <LinearLayout
        android:id="@+id/layout_username"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginTop="@dimen/y122"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:background="@mipmap/login_page_people"
            android:id="@+id/tv_username"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x150"
            android:layout_width="@dimen/x50"
            android:paddingBottom="@dimen/y30" />

        <EditText
            style="@style/edittext_login"
            android:hint="@string/input_phone_number"
            android:id="@+id/et_phone_number"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_username"
            android:numeric="integer"
            android:paddingLeft="@dimen/x50"
            android:textColorHint="@color/white_d6dde4"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:background="@color/item_showmore_click"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_width="@dimen/x560" />

    <LinearLayout
        android:id="@+id/layout_pwd"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginTop="@dimen/y30"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:background="@mipmap/login_page_password"
            android:id="@+id/tv_pwd"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x150"
            android:layout_width="@dimen/x50"
            android:paddingBottom="@dimen/y30" />

        <EditText
            style="@style/edittext_login"
            android:hint="请输入密码"
            android:id="@+id/et_password"
            android:layout_toRightOf="@+id/tv_username"
            android:paddingLeft="@dimen/x50"
            android:password="true"
            android:textColorHint="@color/white_d6dde4"
            android:textSize="18sp" />

        <ImageView
            android:background="@mipmap/login_backgroud_fen"
            android:id="@+id/login_page_yellow"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x250"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <TextView
        android:background="@color/item_showmore_click"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_width="@dimen/x560" />

    <TextView
        android:background="@mipmap/login_backgroud_fense"
        android:gravity="center"
        android:id="@+id/submit_login"
        android:layout_gravity="center"
        android:layout_height="@dimen/y92"
        android:layout_marginTop="@dimen/y60"
        android:layout_width="wrap_content"
        android:text="@string/str_login"
        android:textColor="@color/white"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reg_new_people"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:layout_width="wrap_content"
            android:text="注册新用户"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x250"
            android:layout_marginTop="@dimen/y30"
            android:layout_width="wrap_content"
            android:text="@string/forget_password"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>