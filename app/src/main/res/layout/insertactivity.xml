<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_gred_background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:orientation="horizontal"
        android:background="@color/black">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_back"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y96"
            android:id="@+id/my_follow"
            android:textSize="19sp"
            android:textColor="#D6DDE4"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x250"
            android:text="兴趣选项"/>
        </LinearLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/insertgridview"
        android:numColumns="3"></GridView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:orientation="horizontal">
        <Button
            android:layout_width="@dimen/x360"
            android:layout_height="wrap_content"
            android:id="@+id/button_text"
            android:textSize="16sp"
            android:textColor="#778998"
            android:gravity="center"
            android:background="@color/white"
            android:text="重设"/>
        <Button
            android:layout_width="@dimen/x360"
            android:layout_height="wrap_content"
            android:id="@+id/button1_text"
            android:textSize="16sp"
            android:textColor="#778998"
            android:background="@color/white"
            android:text="已选好"/>
    </LinearLayout>
</LinearLayout>
