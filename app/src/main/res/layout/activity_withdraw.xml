<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:orientation="horizontal"
        android:background="@color/black">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_back"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y96"
            android:textSize="17sp"
            android:textColor="#778998"
            android:layout_marginLeft="@dimen/x240"
            android:gravity="center"
            android:text="余额提现"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/alipay_icon"
            android:layout_margin="@dimen/x20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/x20"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尾数"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2561"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_with"
            android:background="@mipmap/vip_selected"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x200"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/app_gred_background"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/winxinpay_icon"
            android:layout_margin="@dimen/x20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/x20"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尾数"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x53"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2561"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_withdraw"
            android:background="@mipmap/vip_selected"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginLeft="@dimen/x200"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/add_alipay"
                android:text="支付宝账号"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/text_huang"
                android:background="@mipmap/edit_back"
                android:layout_margin="@dimen/x20"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/add"
                android:layout_marginTop="@dimen/x48"
                android:layout_marginLeft="@dimen/x60"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/add_weixin"
                android:text="微信账号"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/text_huang"
                android:background="@mipmap/edit_back"
                android:layout_margin="@dimen/x20"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/add"
                android:layout_marginTop="@dimen/x48"
                android:layout_marginLeft="@dimen/x60"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recharge_edittext"
            android:layout_marginTop="@dimen/y30"
            android:hint="可提现金额为200.0"
            android:paddingLeft="@dimen/x130"
            android:textColor="@color/text_gray_color"
            android:background="@mipmap/edit_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="金额"
            android:layout_marginTop="@dimen/y45"
            android:layout_marginLeft="@dimen/x30"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray_color"
        android:text="@string/withdraw_text"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x130"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/withdraw_textview"
        android:text="确认"
        android:layout_marginTop="@dimen/y100"
        android:background="@mipmap/withdraw"
        android:textSize="18sp"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray_color"
        android:text="@string/withdraw"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x480"
        />
</LinearLayout>
