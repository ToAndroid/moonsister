<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:weightSum="1">

        <com.moonsister.tcjy.widget.RoundImageView
            android:id="@+id/riv_avater"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x48"
            android:layout_margin="@dimen/x20"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="@string/loading"
            android:textColor="@color/black_1a2729"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_add_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="0.04"
            android:src="@mipmap/add_vip_icon"/>

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/color_ebf9fb"
            android:padding="@dimen/x10"
            android:text="@string/loading"
            android:textColor="@color/color_3e838a"
            android:textSize="@dimen/text_size_10"/>

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/color_ebf9fb"
            android:padding="@dimen/x10"
            android:text="@string/loading"
            android:textColor="@color/color_3e838a"
            android:textSize="@dimen/text_size_10"/>


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/address_icon"
            android:drawablePadding="@dimen/x10"
            android:singleLine="true"
            android:text="@string/loading"
            android:textColor="@color/color_3e838a"
            android:textSize="@dimen/text_size_13"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x210"
        android:layout_below="@+id/ll_user_info"
        android:layout_marginBottom="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/x2"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_pic_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/x2"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_pic_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/x2"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_engagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_pic"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginRight="@dimen/x40"
        android:background="@drawable/shape_background_half_round_red"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:paddingTop="@dimen/x10"
        android:text="@string/engagement"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13"/>

    <TextView
        android:id="@+id/tv_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_pic"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginRight="@dimen/x30"
        android:layout_toLeftOf="@id/tv_engagement"
        android:background="@drawable/shape_online_bule_text"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:paddingTop="@dimen/x10"
        android:text="@string/im"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13"/>
</RelativeLayout>