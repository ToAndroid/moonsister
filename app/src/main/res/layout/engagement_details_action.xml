<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_home_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x92"
        android:background="@color/white"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/rl_reward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/home_page_reward"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="@string/action_reward"/>
        </RelativeLayout>

        <View
            style="@style/vertical_line"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginTop="@dimen/x15"/>

        <RelativeLayout
            android:id="@+id/rl_im"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@mipmap/engagement_red_packet"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="@string/send_red_packet"
                android:textColor="@color/gray_text"/>
        </RelativeLayout>

        <View
            style="@style/vertical_line"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginTop="@dimen/x15"/>

        <RelativeLayout
            android:id="@+id/rl_wacth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_wacth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/engagement_gift_bag"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="@string/send_gift_bag"
                android:textColor="@color/gray_text"/>
        </RelativeLayout>

        <View
            style="@style/vertical_line"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginTop="@dimen/x15"/>

        <RelativeLayout
            android:id="@+id/rl_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="@string/to_home_page"
                android:textColor="@color/gray_text"/>
        </RelativeLayout>

        <View
            style="@style/vertical_line"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginTop="@dimen/x15"/>

        <RelativeLayout
            android:id="@+id/rl_flower"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="@string/dl_waiting"
                android:textColor="@color/gray_text"/>
        </RelativeLayout>


    </LinearLayout>
</FrameLayout>