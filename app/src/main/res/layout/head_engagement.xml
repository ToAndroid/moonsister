<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/blue_dark_151c22"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/x30"
            android:src="@mipmap/back"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_background_half_round_transparent"
            android:padding="@dimen/x3">

            <TextView
                android:id="@+id/tv_engagement"
                android:layout_width="@dimen/x238"
                android:layout_height="@dimen/x63"
                android:background="@drawable/shape_background_half_round_blue_dark_151c22"
                android:gravity="center"
                android:text="@string/engagement"/>

            <TextView
                android:id="@+id/tv_engagemented"
                android:layout_width="@dimen/x238"
                android:layout_height="@dimen/x63"
                android:layout_toRightOf="@+id/tv_engagement"
                android:background="@drawable/shape_background_half_round_blue_dark_151c22"
                android:gravity="center"
                android:text="@string/engagemented"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
