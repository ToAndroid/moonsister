<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:orientation="horizontal"
        android:background="@color/black">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_back"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y96"
            android:textSize="17sp"
            android:textColor="#778998"
            android:layout_marginLeft="@dimen/x240"
            android:gravity="center"
            android:text="填写账号"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_edittext"
            android:layout_marginTop="@dimen/y30"
            android:hint="请填写真实姓名"
            android:paddingLeft="@dimen/x130"
            android:textColor="@color/text_gray_color"
            android:background="@mipmap/edit_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="姓名"
            android:layout_marginTop="@dimen/y60"
            android:layout_marginLeft="@dimen/x30"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_edit"
            android:hint="请输入账号"
            android:paddingLeft="@dimen/x130"
            android:textColor="@color/text_gray_color"
            android:background="@mipmap/edit_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="账号"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginLeft="@dimen/x30"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_textview"
        android:text="确定"
        android:layout_marginTop="@dimen/y100"
        android:background="@mipmap/withdraw"
        android:textSize="18sp"
        android:gravity="center"/>
</LinearLayout>
