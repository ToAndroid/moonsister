<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <com.moonsister.tcjy.widget.CircularImageView
        android:id="@+id/civ_user_avater"
        android:layout_width="@dimen/x176"
        android:layout_height="@dimen/x158"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x66"
        android:src="@mipmap/ic_launcher"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/civ_user_avater"
        android:layout_marginLeft="-20dp"
        android:layout_toRightOf="@+id/civ_user_avater"
        android:src="@mipmap/add_v_icon"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/civ_user_avater"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x28"
        android:text="@string/loading"
        android:textColor="@color/black_1a2729"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold"/>

    <include
        layout="@layout/include_engagement_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginTop="@dimen/x118"/>
</RelativeLayout>