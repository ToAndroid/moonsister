<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:background="#f790ae"
        android:gravity="center"
        android:layout_height="@dimen/x96"
        android:layout_width="match_parent"
        android:text="填写资料"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y54"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:background="@mipmap/fillout_message"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="wrap_content"
            android:text="@string/fillout_message"
            android:textColor="@color/text_followmy_color"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:background="@mipmap/filloutmessage_upload"
        android:id="@+id/fillout_imageview"
        android:layout_gravity="center"
        android:layout_height="@dimen/y350"
        android:layout_marginTop="@dimen/y60"
        android:layout_width="@dimen/x350"
        android:scaleType="centerCrop" />

    <EditText
        android:background="@drawable/shape_edit"
        android:hint="为自己取个万众瞩目的江湖绰号吧～"
        android:id="@+id/fillout_message_name"
        android:layout_height="@dimen/y96"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y66"
        android:layout_width="match_parent"
        android:maxLength="8"
        android:paddingLeft="@dimen/x15"
        android:textColor="@color/black"
        android:textColorHint="@color/white_d6dde4"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y150"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:background="@mipmap/recharge_backgroud"
            android:gravity="center"
            android:id="@+id/fillout_ok"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="完成"
            android:textColor="@color/white" />

        <TextView
            android:background="@mipmap/let_go"
            android:gravity="center"
            android:id="@+id/fillout_go"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="wrap_content"
            android:text="跳过"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>